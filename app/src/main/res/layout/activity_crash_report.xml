<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#121212">

    <TextView
        android:id="@+id/crash_report_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="An Unexpected Error Occurred"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/crash_report_title"
        android:layout_above="@+id/crash_report_close_button"
        android:background="#2E2E2E"
        android:padding="8dp">

        <TextView
            android:id="@+id/crash_report_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#E0E0E0"
            android:textSize="12sp"
            android:typeface="monospace"
            android:textIsSelectable="true"/>

    </ScrollView>

    <Button
        android:id="@+id/crash_report_close_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:text="Close Application" />

</RelativeLayout>